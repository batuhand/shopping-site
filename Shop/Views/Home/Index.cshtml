@model HomeViewModel


<h2>@Model.Title</h2>

@foreach (var item in Model.Items)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h3 class="pull-right">@item.Price.ToString()</h3>
                <h3>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">@item.Name</a></h3>
                <p>@item.ShortDescription</p>
            </div>

        </div>


    </div>


}
<a asp-controller ="Home" asp-action="AddNewItem">Add new Item</a>